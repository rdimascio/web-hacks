<span class="page-number"><b>{{page}}</b>/{{pages}}</span>

<div class="pagination-container">
	{{!-- Pagination --}}
	<nav class="pagination" role="navigation">
	    {{#if prev}}
	        <a class="newer-posts" href="{{page_url prev}}"><b>Newer <span>Posts</span></b></a>
	    {{/if}}
	    {{#if next}}
	        <a class="older-posts" href="{{page_url next}}"><b>Older <span>Posts</span></b></a>
	    {{/if}}
	</nav>
</div>