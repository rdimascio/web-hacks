                </div>
            </div>

            <!-- Menu Modal -->
            <div class="modal fade-scale" id="menu" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div class="container">
                                <div class="row">
                                    <div class="col-6 ml-auto">
                                        <div class="text-center blog-logo">
                                            <a href="{{@blog.url}}" title="{{@blog.title}}">
                                                {{#if @blog.logo}} <img src="{{@blog.logo}}" alt="{{@blog.title}}" /> {{else}}<span>{{@blog.title}}</span>{{/if}} 
